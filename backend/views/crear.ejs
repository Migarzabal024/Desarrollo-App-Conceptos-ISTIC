<h1>Crear Nuevo Concepto</h1>

<form id="formCrear">
    <div>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>
    </div>
    
    <div>
        <label for="descripcion">Descripción:</label>
        <textarea id="descripcion" name="descripcion" rows="4" required></textarea>
    </div>

    <button type="submit">Crear</button>
    <a href="/conceptos">
        <button type="button">Cancelar</button>
    </a>
</form>

<script>
    document.getElementById('formCrear').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const datos = {
            nombre: document.getElementById('nombre').value,
            descripcion: document.getElementById('descripcion').value
        };
        
        try {
            const response = await fetch('/api/conceptos', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(datos)
            });
            
            if (response.ok) {
                window.location.href = '/conceptos';
            } else {
                const error = await response.json();
                alert('❌ Error: ' + (error.error || 'No se pudo crear'));
            }
        } catch (error) {
            console.error('Error:', error);
            alert('❌ Error de conexión al crear el concepto');
        }
    });
</script>

